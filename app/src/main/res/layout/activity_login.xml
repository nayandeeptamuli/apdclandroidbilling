<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nayandeeptamuli.apdclandroidbilling.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:gravity="right">

            <ImageView
                android:id="@+id/login_dbtransfer_but"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_action_dbtransfer"/>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_logo_deyakelectricity"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/login_tag"
            android:textSize="40dp"
            android:textStyle="bold"
            android:text="@string/activity_login_tag"/>

            
        <TextView
            android:id="@+id/demo"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/login_tag"
            android:textSize="14dp"
            android:layout_marginBottom="65dp"
            android:text="Training"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"><!-- 310dp -->

            </LinearLayout>

            <ImageView
                android:id="@+id/login_lock"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_lock"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/login_unlock"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_unlock"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/login_pin"

                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edittext_back"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:fontFamily="calibri"
                android:hint="@string/login_edittext_hint"/>

            <ImageView
                android:id="@+id/login_voice"

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_action_voice"/>

        </LinearLayout>





    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
